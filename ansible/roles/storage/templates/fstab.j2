# /etc/fstab: static file system information.
#
/dev/mmcblk0p3  /  ext4  noatime,errors=remount-ro  0  1
/dev/mmcblk0p1  /boot/firmware vfat user,uid=1000,gid=1000,defaults 0 0
/dev/mmcblk0p2  none    swap    sw      0       0
debugfs  /sys/kernel/debug  debugfs  mode=755,uid=root,gid=gpio,defaults  0  0

# SD card swap file (tertiary fallback)
{{ storage_mount_point }}/swapfile  none  swap  sw,pri={{ sd_swap_priority }}  0  0

# SD card storage mount
UUID={{ storage_device_uuid }}  {{ storage_mount_point }}  ext4  defaults,noatime  0  2

# Bind mounts for large directories
{{ storage_mount_point }}/home       /home           none  bind  0  0
{{ storage_mount_point }}/opt        /opt            none  bind  0  0
{{ storage_mount_point }}/docker     /var/lib/docker none  bind  0  0
{{ storage_mount_point }}/log        /var/log        none  bind  0  0
